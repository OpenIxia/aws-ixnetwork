{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "IxVM on AWS 1-VMone Add-On Test CloudFormation",
	"Mappings" : {
		"RegionMap" : {
			"us-east-1" : {
				"AMIxVMONE" : "ami-0b49db69ff0cf8c48",
				"REGIONxTAG" : "US_EAST_1"
			},
			"us-east-2" : {
				"AMIxVMONE" : "ami-0b35fadcad7bebddc",
				"REGIONxTAG" : "US_EAST_2"
			},
			"us-west-1" : {
				"AMIxVMONE" : "ami-056acba46640b2770",
				"REGIONxTAG" : "US_WEST_1"
			},
			"us-west-2" : {
				"AMIxVMONE" : "ami-01ab99188be4d2dd7",
				"REGIONxTAG" : "US_WEST_2"
			},
			"ap-east-1" : {
				"AMIxVMONE" : "ami-00000000000000000",
